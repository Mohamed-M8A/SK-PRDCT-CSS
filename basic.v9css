.info-boxes-wrapper {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15px;
  margin-top: 20px;
}

.info-box {
  background: #fff;
  padding: 14px 16px;
  border-radius: 6px;
  border: 1px solid #e0e0e0;
  text-align: center;
}

/* Ø§Ù„Ù†ØµÙˆØµ */
.info-box .label {
  font-size: 12px;
  font-weight: 500;
  color: #666;
  margin-bottom: 4px;
  display: block;
}

.info-box .value {
  font-size: 14px;
  font-weight: 600;
  color: #222;
}

/* ============================
   âœ… Ø§Ù„Ø³Ø¹Ø± ÙˆØ§Ù„Ø¹Ø±ÙˆØ¶
============================== */

.price-box {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 6px;
  margin-bottom: 16px;
}

.top-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.price-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

.price-discounted {
  font-size: 32px;
  font-weight: 800;
  background: linear-gradient(135deg, #059669 0%, #10b981 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin: 0;
}

.discount-percentage {
  font-size: 15px;
  font-weight: 700;
  color: #fff;
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  padding: 6px 12px;
  border-radius: 8px;
  margin: 0;
}

.discount-percentage:empty {
  display: none;
}

.price-original {
  font-size: 18px;
  font-weight: 500;
  color: #94a3b8;
  text-decoration: line-through;
  margin: 0;
}

.price-saving {
  display: inline-block;
  background-color: #fffbdb;
  padding: 2px 5px;
  margin-left: 4px;
  font-size: 12px;
  font-weight: 500;
  text-transform: uppercase;
  border: 2px dashed #fbc02d;
}

.price-saving:empty {
  display: none;
}

